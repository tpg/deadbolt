{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/js/*"]
        },
        "outDir": "dist"
    },
    "include": ["./src/js/**/*.ts"]
}
