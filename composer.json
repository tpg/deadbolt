{
    "name": "thepublicgood/deadbolt",
    "description": "Dead simple permissions for Laravel",
    "keywords": ["permissions", "authorization", "deadbolt", "laravel"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/tpg/deadbolt/issues",
        "source": "https://github.com/tpg/deadbolt"
    },
    "authors": [
        {
            "name": "THEPUBLICGOOD",
            "email": "makers@thepublicgood.co.za"
        }
    ],
    "autoload": {
        "psr-4": {
            "TPG\\Deadbolt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPG\\Deadbolt\\Tests\\": "tests/",
            "TPG\\Deadbolt\\Tests\\Factories\\": "tests/factories/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "laravel/framework": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.31",
        "roave/security-advisories": "dev-latest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "TPG\\Deadbolt\\DeadboltServiceProvider"
            ],
            "aliases": {
                "Deadbolt": "TPG\\Deadbolt\\Facades\\Deadbolt"
            }
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
